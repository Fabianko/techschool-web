---
import Button from '@ui/Button.astro';

import { Icon } from 'astro-icon/components';
interface Props {
  icon: string;
  region: string;
  direction: string;
}

const { icon, region, direction } = Astro.props;
---

<div class="region-cont">
  <Icon name={icon} size={280} />

  <section>
    <h2>{region}</h2>
    <p>üìç{direction}</p>
    <Button variant="primary"> Inscribirme </Button>
  </section>
</div>

<style>
  .region-cont {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    max-width: 34rem;

    & section {
      display: flex;
      flex-direction: column;
      align-items: center;
      & h2,
      p {
