---
import type { ImageMetadata } from 'astro';
import Link from '@ui/Link.astro';
import { Picture } from 'astro:assets';

interface Props {
  icon: string;
  region: string;
  direction: string;
  link: string;
}

const { icon, region, direction, link } = Astro.props;

const getImages = import.meta.glob<{ default: ImageMetadata }>(
  '/src/images/states/*.{jpeg,jpg,png,webp}'
);
---

<div class="region">
  <Picture
    alt={region}
    fetchpriority="low"
    formats={['avif', 'webp']}
    height={280}
    src={getImages[icon]()}
  />

  <section>
    <h2>{region}</h2>
    <p>üìç{direction}</p>

    <Link link={link} variant="solid">Inscribirme</Link>
  </section>
</div>

<style>
  .region {
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    width: 20rem;

    & img {
      object-fit: cover;
    }

    & section {
      display: flex;
      flex-direction: column;
      align-items: center;
      & h2,
      p {
        text-align: center;
      }

      & p {
      }
    }
  }
</style>
