---
import Region from '@components/Region.astro';

import { places } from '@data/places';
---

<section class="container">
  {places.map(
    ({ direction, icon, name, link }, index) => (
      <>
        <Region
          direction={direction}
          icon={icon}
          link={link}
          region={name}
        />

        {
          index % 2 === 0 ? <hr /> : null
        }
      </>
    )
  )}
</section>

<style>
  .container {
    color: var(--white);
    width: 100%;
    min-height: 100vh;
    position: relative;

    display: grid;
    grid-template-columns: 1fr 1px 1fr;
    grid-template-rows: repeat(2, 1fr);
    grid-column-gap: 1.5rem;
    grid-row-gap: 6.5rem;
    justify-items: center;

    @media (width <= 768px) {
      grid-template-columns: repeat(1, 1fr);
      grid-template-rows: repeat(4, 1fr);
      grid-column-gap: 0;
      grid-row-gap: 2rem;
    }

    & hr {
      height: 100%;
      border: 1px solid #44403C;
      @media (width <= 768px) {
        display: none;
      }
    }
  }
</style>
