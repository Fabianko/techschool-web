---
import Hero from '@components/Hero.astro';
import Locations from '@components/Locations.astro';
import OpenGraph from '@components/struct/OpenGraph.astro';

import Layout from '@layouts/Layout.astro';

const options = {
  title: 'Tech School',
  description: 'Primer evento tecnologico inter regional'
};
---

<Layout options={options}>
  <OpenGraph
    description={options.description}
    image="/og/og.jpg"
    slot="social-media"
    title={options.title}
  />

  <main>
    <Hero />

    <Locations />
  </main>

  <footer>
    <!-- TODO: Add your footer here -->
  </footer>
</Layout>

<style>
  main {
    overflow: hidden;
    padding-inline: 4.5rem;
    padding-block-end: 6.5rem;
  }
</style>
